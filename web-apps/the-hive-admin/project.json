{
  "name": "the-hive-admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "web-apps/the-hive-admin/src",
  "tags": [
    "application:admin"
  ],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/web-apps/the-hive-admin",
        "index": "web-apps/the-hive-admin/src/index.html",
        "main": "web-apps/the-hive-admin/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "web-apps/the-hive-admin/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "web-apps/the-hive-admin/src/assets",
            "output": "assets"
          }
        ],
        "styles": [
          "web-apps/the-hive-admin/src/styles.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "baseHref": "/admin/",
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "500kb",
              "maximumError": "5mb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "proxyConfig": "web-apps/the-hive-admin/proxy.json"
      },
      "dependsOn": [
        "build"
      ],
      "configurations": {
        "production": {
          "buildTarget": "the-hive-admin:build:production"
        },
        "development": {
          "buildTarget": "the-hive-admin:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "the-hive-admin:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "web-apps/the-hive-admin/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "the-hive-admin:build",
        "port": 4200,
        "spa": true
      }
    }
  }
}
